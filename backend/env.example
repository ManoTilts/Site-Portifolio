# Database
MONGODB_URL=mongodb://localhost:27017/portfolio_db
DATABASE_NAME=portfolio_db

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-password

# Email Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@yourportfolio.com
ADMIN_EMAIL_RECIPIENT=your-email@example.com

# SMTP Configuration (alternative to SendGrid)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif,webp

# Rate Limiting
RATE_LIMIT_CONTACT_FORM=5/minute
RATE_LIMIT_FILE_UPLOAD=10/minute

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# Environment
ENVIRONMENT=development

# Redis (for rate limiting)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log 